<Window x:Class="Vafadar_GOL.WindowCheckRules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vafadar_GOL"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CheckRules" Height="300" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" >
            <Label Content="Rows=" Margin="3" />
            <TextBox Width="100" Margin="3" Name="txtBoxRows" Text="10"/>
            <Label Content="Cols=" Margin="3" />
            <TextBox Width="100" Margin="3" Name="txtBoxCols" Text="16"/>
            <Button Width="150" Name="CreateMatrix" Content="Create" Margin="3" Click="CreateMatrix_Click"/>
        </StackPanel>
        <local:UserControlRadioMatrix Grid.Row="1" Grid.Column="0" x:Name="ucRadioMatrix"/>
    </Grid>
</Window>
