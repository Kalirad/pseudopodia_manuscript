<UserControl x:Class="Vafadar_GOL.UserControlRadioMatrix"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vafadar_GOL"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <UniformGrid Grid.Row="1" Grid.Column="0" Name="ugNeigbors" Margin="3" Background="AliceBlue"/>
        <UniformGrid Grid.Row="1" Grid.Column="1" Name="ugNeigborsMatter" Margin="3" Background="AntiqueWhite"/>
    </Grid>
</UserControl>
